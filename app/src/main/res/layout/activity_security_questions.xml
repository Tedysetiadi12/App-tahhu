<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Topbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/accentColor"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/left"
            android:contentDescription="Back"
            app:tint="@color/white"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Questions"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/googlesans_medium"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Question 1 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apa warna favorit Anda?"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/securityAnswer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:hint="Masukkan Jawaban Anda Disini"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="8dp" />

    <!-- Question 2 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apa nama hewan peliharaan pertama Anda"
        android:textSize="16sp"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginTop="16dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/securityAnswer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:hint="Masukkan Jawaban Anda Disini"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="8dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveSecurityQuestionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:padding="12dp"
        android:backgroundTint="@color/accentColor"
        android:text="Simpan"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>
