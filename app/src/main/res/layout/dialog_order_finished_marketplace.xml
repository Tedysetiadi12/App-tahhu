<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <View
        android:id="@+id/purpleBackground"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:background="@drawable/bg_accent_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/progressCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="22dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/googlesans_bold"
                        android:text="Pesanan Selesai"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin_standard"
                                android:src="@drawable/ic_user"
                                app:tint="@color/successGreen" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Pesan" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/black" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin_standard"
                                android:src="@drawable/ic_user"
                                app:tint="@color/successGreen" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Bayar" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/black" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="23dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin_standard"
                                android:src="@drawable/ic_user"
                                app:tint="@color/successGreen" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Antar" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/orderFinishedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:fontFamily="@font/googlesans_bold"
                android:text="Detail Pesanan"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progressCard" />

            <TextView
                android:id="@+id/orderDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/googlesans_regular"
                android:text="Gunakan informasi di bawah agar anda\ndapat melihat status pemesanannya"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/orderFinishedTitle"
                app:layout_constraintTop_toBottomOf="@id/orderFinishedTitle"
                android:layout_marginTop="8dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/detailsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="22dp"
                app:layout_constraintTop_toBottomOf="@id/orderDescription">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor Resi"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nomor_resi_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor resi disni"
                        android:drawableStart="@drawable/pencil1"
                        android:textColor="#A5A5A5"
                        android:textSize="16sp"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/accentColor"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="16sp"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tahhu@mail.com"
                        android:drawableStart="@drawable/pencil1"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/accentColor"
                        android:textColor="#A5A5A5"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp" />

<!--                    <TextView-->
<!--                        android:id="@+id/productDetailsTextView"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Detail Produk"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textSize="16sp"-->
<!--                        android:padding="8dp" />-->

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDownloadInvoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_standard"
                        android:layout_marginEnd="@dimen/margin_standard"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        app:icon="@drawable/ic_download"
                        app:iconGravity="start"
                        app:iconTint="@color/black"
                        app:iconSize="24dp"
                        android:drawablePadding="8dp"
                        android:layout_gravity="center"
                        android:text="Download invoice"
                        android:textColor="@color/black"
                        android:fontFamily="@font/googlesans_medium"
                        app:cornerRadius="26dp"
                        android:textSize="12sp"
                        android:backgroundTint="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/detailsCard"
                        app:layout_constraintBottom_toTopOf="@id/checkBookingButton" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/orderAgainButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_standard"
                android:layout_marginEnd="@dimen/margin_standard"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:text="Pesan Lagi"
                android:textColor="@color/white"
                android:fontFamily="@font/googlesans_medium"
                app:cornerRadius="26dp"
                android:textSize="16sp"
                android:backgroundTint="@color/buttonColor"
                app:layout_constraintTop_toBottomOf="@id/detailsCard"
                app:layout_constraintBottom_toTopOf="@id/checkBookingButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkBookingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginStart="@dimen/margin_standard"
                android:layout_marginEnd="@dimen/margin_standard"
                app:cornerRadius="26dp"
                android:fontFamily="@font/googlesans_medium"
                android:text="kembali ke Beranda"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

