<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="0dp"
        android:paddingBottom="16dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/accentColor"
        android:paddingStart="@dimen/margin_standard"
        android:paddingEnd="@dimen/margin_standard">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_to_marketplace"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="@dimen/margin_standard"
            android:src="@drawable/left"
            app:tint="#fff" />

        <!-- "Checkouts" Text -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/googlesans_bold"
            android:gravity="center"
            android:text="Shopping List"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff" />

        <!-- Search Button -->
        <ImageView
            android:id="@+id/search_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search_menu"
            android:layout_marginStart="@dimen/margin_standard"
            app:tint="#fff" />
    </LinearLayout>

            <!-- Total Amount Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_background_buttoncolor"
                    android:padding="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:text="Rp. 0"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="10dp"
                android:background="#F8F2EC"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/googlesans_medium"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:text="Silahkan catat daftar belanja anda disini biar tidak ada yang terlupa, Happy Shopping"
                android:textAlignment="center" />

            <!-- Input Form Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_top_border_accent"
                android:padding="16dp"
                android:textSize="16dp"
                android:fontFamily="@font/googlesans_medium"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Tulis daftar belanja :"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/etItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:padding="16dp"
                android:fontFamily="@font/googlesans_medium"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Nama Barang" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etQuantity"
                    android:layout_width="0dp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="16dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/googlesans_medium"
                    android:layout_weight="1"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/black"
                    android:hint="Jumlah"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="0dp"
                    android:background="@drawable/rounded_edittext"
                    android:padding="16dp"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/black"
                    android:fontFamily="@font/googlesans_medium"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:hint="Harga (Rp)"
                    android:inputType="number" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSelectCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/lightGray"
                android:padding="12dp"
                android:fontFamily="@font/googlesans_medium"
                android:drawableEnd="@drawable/pencil1"
                android:text="Pilih Kategori"
                android:textAlignment="textStart"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:padding="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/googlesans_medium"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:hint="Catatan (Opsional)" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddToList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edittext"
                android:textSize="16dp"
                android:padding="14dp"
                android:fontFamily="@font/googlesans_medium"
                android:backgroundTint="@color/buttonColor"
                android:text="+ Tambah ke Daftar Belanja"
                android:textColor="@android:color/white" />

            <!-- Tab Layout and ViewPager -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/accentColor"
                app:tabIndicatorColor="@color/buttonColor"
                app:tabSelectedTextColor="@color/white"
                android:layout_marginStart="@dimen/margin_standard"
                android:layout_marginEnd="@dimen/margin_standard"
                android:layout_marginTop="24dp" />

            <!-- ViewPager2 -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="@dimen/margin_standard"
                android:layout_marginEnd="@dimen/margin_standard"/>

        </LinearLayout>
    </ScrollView>