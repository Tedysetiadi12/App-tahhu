<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Judul dan Spinner untuk Type -->
    <TextView
        android:id="@+id/txtType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipe"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSelectType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pilih Tipe"
        android:drawableEnd="@drawable/arrowdown"
        android:padding="10dp"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@color/black"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/txtType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Judul dan EditText untuk Jumlah -->
    <TextView
        android:id="@+id/txtJumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnSelectType"/>

    <EditText
        android:id="@+id/edtJumlah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Jumlah"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:inputType="numberDecimal"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/txtJumlah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Judul dan TextView untuk Tanggal -->
    <TextView
        android:id="@+id/txtTanggalValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/edtJumlah"/>

    <TextView
        android:id="@+id/txtTanggal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Pilih Tanggal"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        app:layout_constraintTop_toBottomOf="@id/txtTanggalValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Judul dan TextView untuk Tanggal Jatuh Tempo -->
    <TextView
        android:id="@+id/txtTanggalJatuhTempoValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Jatuh Tempo"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtTanggal"/>

    <TextView
        android:id="@+id/txtTanggalJatuhTempo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Pilih Tanggal Jatuh Tempo"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTanggalJatuhTempoValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Judul dan EditText untuk Nama -->
    <TextView
        android:id="@+id/txtNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtTanggalJatuhTempo"/>

    <EditText
        android:id="@+id/edtNama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nama"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/txtNama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Judul dan EditText untuk Deskripsi -->
    <TextView
        android:id="@+id/txtDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/edtNama"/>

    <EditText
        android:id="@+id/edtDeskripsi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Deskripsi"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/txtDeskripsi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Judul dan EditText untuk Catatan (Opsional) -->
    <TextView
        android:id="@+id/txtCatatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Catatan (Opsional)"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/edtDeskripsi"/>

    <EditText
        android:id="@+id/edtCatatan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Catatan"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintTop_toBottomOf="@id/txtCatatan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Judul dan Spinner untuk Status -->
    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/edtCatatan"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSelectStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pilih Status"
        android:drawableEnd="@drawable/arrowdown"
        android:padding="10dp"
        android:textColor="@android:color/darker_gray"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="@color/lightGray"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>


    <!-- Tombol Simpan -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSimpan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:textColor="@color/black"
        android:textColorHint="@color/secondaryTextColor"
        android:backgroundTint="@color/accentColor"
        android:background="@drawable/holiday_background"
        app:layout_constraintTop_toBottomOf="@id/btnSelectStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnBatal"
        android:layout_marginTop="16dp" />

    <!-- Tombol Batal -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBatal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Batal"
        android:layout_marginStart="10dp"
        android:background="@drawable/holiday_background"
        android:textColor="@color/black"
        android:backgroundTint="@color/accentColor"
        app:layout_constraintTop_toBottomOf="@id/btnSelectStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSimpan"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
