<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="3dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/white"
    android:id="@+id/productCard">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

      >
        <!-- Product Image -->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/productImage"
            android:layout_width="190dp"
            android:layout_height="190dp"
            app:shapeAppearanceOverlay="@style/radicardproduct"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/googlesans_medium"
                android:text="Lampu Stan"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/googlesans_bold"
                android:text="Rp 50,000"
                android:textColor="@color/orenge"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Product Name -->

        <!-- Product Price -->

        <!-- Rating and Sales Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <!-- Rating Star Icon -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/rating_star"
                app:tint="@color/accent" />

            <!-- Rating Value -->
            <TextView
                android:id="@+id/productRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4.5"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/googlesans_medium" />

            <!-- Divider dot -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="â€¢"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <!-- Sales Count -->
            <TextView
                android:id="@+id/productSold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 sold"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:fontFamily="@font/googlesans_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:backgroundTint="#8DDBDBDB"
                android:text="Add to Cart"
                android:visibility="gone"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

