<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header with Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_standard"
            android:background="@color/accentColor">

            <ImageView
                android:id="@+id/btnBackAboutUs"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/left"
                android:contentDescription="Back Button"
                android:tint="@color/white"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/googlesans_medium"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- App Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat datang di TAHHU! Kami berusaha memberikan pengalaman terbaik bagi pengguna kami"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:textSize="16sp"
            android:fontFamily="@font/googlesans_regular"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Team Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tim Kami"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:textSize="18sp"
            android:fontFamily="@font/googlesans_medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:text="Kami adalah tim pengembang, desainer, dan inovator yang bersemangat yang bekerja tanpa lelah untuk menghadirkan fitur terbaik bagi Anda."
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/googlesans_regular"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Contact Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontak Kami"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/googlesans_medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:text="Email: support@tahhu.com\nNo. Telepon: +123 456 7890"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/googlesans_regular"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>
</FrameLayout>
