<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.tahhu.id.UcoActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:id="@+id/header_uco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:background="@color/accentColor">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/left"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="UCO"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/googlesans_medium" />

                <ImageView
                    android:id="@+id/btn_titiktiga"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/kebab"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <!-- Main Content Section -->
            <LinearLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/accentColor">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager3"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>

            <!-- Tukar Minyak Jelantah Section -->
            <LinearLayout
                android:id="@+id/card_tukar_minyak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_whitecorner"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:backgroundTint="@color/white">

                    <ImageView
                        android:id="@+id/img_oil"
                        android:layout_width="2000dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:src="@drawable/cookoil" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/googlesans_regular"
                        android:gravity="center_horizontal"
                        android:text="Untuk rasio penukaran minyak jelantah dengan minyak kemasan adalah 2:1. Anda dapat menukarkannya dengan uang atau\nminyak kemasan lainnya."
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tukar_minyak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Ayo Tukar Segera"
                android:backgroundTint="@color/buttonColor"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/googlesans_medium" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_panduan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Panduan"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/googlesans_medium" />
        </LinearLayout>
    </ScrollView>

    <!-- BottomAppBar -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottom_bar_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            app:fabAlignmentMode="center"
            app:fabCradleMargin="8dp"
            app:fabCradleRoundedCornerRadius="15dp"
            app:fabCradleVerticalOffset="0dp"
            android:backgroundTint="@color/buttonColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/homeButton"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/home"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/menumarket"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        app:tint="#FFFFFF"
                        app:srcCompat="@drawable/favorite" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:tint="@color/white"
                        app:srcCompat="@drawable/home" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/shortvidio"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        app:tint="#FFFFFF"
                        app:srcCompat="@drawable/clapper" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Kalkulator"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        app:tint="#FFFFFF"
                        app:srcCompat="@drawable/ic_kalkulator" />
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Market"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_cartt"
            app:tint="#FFFFFF"
            android:layout_gravity="center"
            android:backgroundTint="@color/buttonColor"
            app:layout_anchor="@id/bottomAppBar"
            android:elevation="3dp"
            app:maxImageSize="30dp"
            android:layout_centerInParent="true" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
