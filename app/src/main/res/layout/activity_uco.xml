<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UcoActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_uco"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/accentColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/left"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="UCO"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/btn_titiktiga"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/kebab"
            app:tint="#FFFFFF"/>
    </LinearLayout>

    <!-- Section for Tukar Minyak Jelantah -->
    <LinearLayout
        android:id="@+id/section_tukar_minyak"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/header_uco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/tukar_minyak"
            android:layout_width="20mm"
            android:layout_height="20mm"
            android:src="@drawable/tukarminyak"
            android:layout_marginTop="5mm"
            app:tint="@color/accentColor"/>

        <Button
            android:id="@+id/btn_tukar_minyak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tukar Minyak Jelantah"
            android:backgroundTint="@color/my_birutua"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <!-- Section for Lokasi Penukaran -->
    <LinearLayout
        android:id="@+id/section_lokasi_penukaran"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/section_tukar_minyak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/lokasi_penukaran"
            android:layout_width="20mm"
            android:layout_height="20mm"
            android:src="@drawable/lokasi"/>

        <Button
            android:id="@+id/btn_lokasi_penukaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi Penukaran"
            android:backgroundTint="@color/my_birutua"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <!-- Section for Order Penjemputan -->
    <LinearLayout
        android:id="@+id/section_order_penjemputan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/section_lokasi_penukaran"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/order_penjemputan"
            android:layout_width="20mm"
            android:layout_height="20mm"
            android:src="@drawable/order"/>

        <Button
            android:id="@+id/btn_order_penjemputan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Penjemputan"
            android:backgroundTint="@color/my_birutua"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
