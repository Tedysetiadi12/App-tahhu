<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.tahhu.id.UcoActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_uco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@color/accentColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/left"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="UCO"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/googlesans_medium" />

        <ImageView
            android:id="@+id/btn_titiktiga"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/kebab"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Main Content Section -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/accentColor"
        app:layout_constraintTop_toBottomOf="@id/header_uco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager3"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

    <!-- Tukar Minyak Jelantah Section -->

    <LinearLayout
        android:id="@+id/card_tukar_minyak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_whitecorner"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/main_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="@color/white">

            <ImageView
                android:id="@+id/img_oil"
                android:layout_width="2000dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/cookoil"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/googlesans_regular"
                android:gravity="center_horizontal"
                android:text="Untuk rasio penukaran minyak jelantah dengan minyak kemasan adalah 2:1. Anda dapat menukarkannya dengan uang atau\nminyak kemasan lainnya."
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Button Ayo Tukar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tukar_minyak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Ayo Tukar Segera"
        android:backgroundTint="@color/buttonColor"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/googlesans_medium"
        app:layout_constraintTop_toBottomOf="@id/card_tukar_minyak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_panduan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:text="Panduan"
        android:backgroundTint="#FF9800"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/googlesans_medium"
        app:layout_constraintTop_toBottomOf="@id/btn_tukar_minyak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
