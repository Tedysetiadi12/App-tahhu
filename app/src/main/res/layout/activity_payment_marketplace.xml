<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/accentColor"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_standard"
        android:paddingEnd="@dimen/margin_standard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_to_marketplace"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/left"
            app:tint="#fff" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/googlesans_medium"
            android:gravity="center"
            android:text="Payment Method"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Main Payment Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

=            <!-- RecyclerView untuk menampilkan daftar produk -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/paymentRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!-- Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <!-- TextView untuk memilih metode pembayaran -->
                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/googlesans_medium"
                    android:text="Pilih Metode Pembayaran"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>

                <!-- Dropdown Icon -->
                <ImageView
                    android:id="@+id/icon_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrowdown"
                    android:contentDescription="Dropdown Arrow"/>
            </LinearLayout>

            <!-- Radio Group -->
            <RadioGroup
                android:id="@+id/radioGroupPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview1">

                <!-- DANA Option -->
                <RadioButton
                    android:id="@+id/rb_dana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icondana1"
                    android:text="DANA"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- GoPay Option -->
                <RadioButton
                    android:id="@+id/rb_gopay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icongopay1"
                    android:textColor="@color/black"
                    android:text="GoPay"
                    android:drawablePadding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- OVO Option -->
                <RadioButton
                    android:id="@+id/rb_ovo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconovo1"
                    android:text="OVO"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- QRIS Option -->
                <RadioButton
                    android:id="@+id/rb_qris"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconqris1"
                    android:textColor="@color/black"
                    android:text="Scan Via QRIS"
                    android:visibility="gone"
                    android:drawablePadding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Transfer Bank BRI Option -->
                <RadioButton
                    android:id="@+id/rb_bri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconbri1"
                    android:text="Transfer Bank BRI"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Transfer Bank BCA Option -->
                <RadioButton
                    android:id="@+id/rb_bca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconbca1"
                    android:text="Transfer Bank BCA"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:drawablePadding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Transfer Bank Mandiri Option -->
                <RadioButton
                    android:id="@+id/rb_mandiri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconmandiri1"
                    android:text="Transfer Bank Mandiri"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/addressView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:background="@drawable/rounded_backgroundcard"
                android:elevation="4dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="8dp"
                android:gravity="start|top"
                android:text="Nama: John Doe\nAlamat: Jl. Sudirman No. 5, Jakarta\nKota: Jakarta\nKecamatan: Tanah Abang"
                android:fontFamily="sans-serif-medium"
                android:maxLines="5"
                android:scrollHorizontally="false" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Alamat"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/lightGray"
                android:textColor="@color/black"
                android:fontFamily="@font/googlesans_medium"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/paymentRecyclerView" />

            <!-- Total Price -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cartBottomLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <!-- Informasi Total dan Ongkir -->
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:text="Total Kuantitas"
                    android:visibility="gone"
                    android:fontFamily="@font/googlesans_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:fontFamily="@font/googlesans_medium"
                    android:text="Jumlah produk"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Harga produk"
                    android:textColor="@color/black"
                    android:fontFamily="@font/googlesans_regular"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <!-- Biaya Ongkir Label -->
                <TextView
                    android:id="@+id/textViewOngkir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Ongkir"
                    android:fontFamily="@font/googlesans_regular"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <TextView
                    android:id="@+id/totalQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:text="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView" />

                <TextView
                    android:id="@+id/totalQuantityView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone"
                    android:text="0"
                    app:layout_constraintBottom_toBottomOf="@+id/textView3"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/totalPriceView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Rp 0"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/textView4"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Biaya Ongkir Value -->
                <TextView
                    android:id="@+id/shippingCostView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Rp 0"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewOngkir"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/lightGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewOngkir" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/googlesans_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />

                <TextView
                    android:id="@+id/finalPriceView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Rp 0"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />

                <!-- Tombol Checkout -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnProceedPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KOnfirmasi pembayaran"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/buttonColor"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="14dp"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
