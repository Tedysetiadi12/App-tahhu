<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Top Bar for Pickup and Destination -->
    <LinearLayout
        android:id="@+id/back_beranda"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/accentColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/left"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/googlesans_bold"
            android:gravity="center"
            android:text="Payment"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/btn_titiktiga"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/kebab"
            app:tint="#FFFFFF"/>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Alamat Rumah"
        android:textSize="18dp"/>

    <!-- Pickup Location -->
    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/location"
        android:fontFamily="@font/googlesans_regular"
        android:drawablePadding="8dp"
        android:textSize="@dimen/margin_standard"
        android:hint="Address"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginBottom="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Alamat Tujuan"
        android:textSize="18dp"/>

    <!-- Destination Address -->
    <TextView
        android:id="@+id/destinationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/placeholder"
        android:fontFamily="@font/googlesans_regular"
        android:textSize="@dimen/margin_standard"
        android:drawablePadding="8dp"
        android:hint="Destination"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Nama Pengirim"
        android:textSize="18dp"/>

    <!-- Destination Address -->
    <TextView
        android:id="@+id/namaPengirim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/googlesans_regular"
        android:textSize="@dimen/margin_standard"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Nama Penerima"
        android:textSize="18dp"/>

    <!-- Destination Address -->
    <TextView
        android:id="@+id/namaPenerima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/googlesans_regular"
        android:textSize="@dimen/margin_standard"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Pilih metode pembayaran"
        android:textSize="18dp"/>

    <RadioGroup
        android:id="@+id/rg_metode_pembayaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_paypal"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="PayPal" />

        <RadioButton
            android:id="@+id/rb_kartu_kredit"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Kartu Kredit" />

        <RadioButton
            android:id="@+id/rb_transfer_bank"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Transfer Bank" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/googlesans_medium"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_standard"
        android:textSize="18sp"
        android:text="Catatan (optional)" />

    <EditText
        android:id="@+id/et_input_pembayaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:textColor="@color/black"
        android:hint="Detail Pembayaran"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/googlesans_medium"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Berat Barang" />

        <TextView
            android:id="@+id/biayaBerat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/googlesans_regular"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Kg " />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/googlesans_medium"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Harga Layanan" />

        <TextView
            android:id="@+id/biayaLayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/googlesans_regular"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Rp " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/googlesans_medium"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Total" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/googlesans_regular"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Rp " />
    </LinearLayout>

    <Button
        android:id="@+id/btn_bayar_sekarang"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:backgroundTint="@color/buttonColor"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_height="wrap_content"
        android:text="Bayar Sekarang" />
</LinearLayout>
</ScrollView>
    </LinearLayout>