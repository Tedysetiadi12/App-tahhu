<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".rideSharing">

    <!-- Map View -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/locationInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/lightGray"
        tools:ignore="MissingConstraints">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <!-- Top Bar for Pickup and Destination -->
    <LinearLayout
        android:id="@+id/back_beranda"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/accentColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/left"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/googlesans_medium"
            android:gravity="center"
            android:text="Ride Sharing"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/btn_titiktiga"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/kebab"
            app:tint="#FFFFFF"/>
    </LinearLayout>

    <!-- Pickup and Destination Input Section -->
    <LinearLayout
        android:id="@+id/locationInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/rounded_top_border"
        app:layout_constraintTop_toBottomOf="@id/mapContainer"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Pickup Location -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/arah" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/pickupLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter pickup location"
                android:drawableStart="@drawable/location"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:fontFamily="@font/googlesans_medium"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan Tujuan Anda "
                android:fontFamily="@font/googlesans_medium"
                android:drawableStart="@drawable/placeholder"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@drawable/rounded_edittext"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Layout for Vehicle Selection and Ride Request -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Request Ride Button -->
        <Button
            android:id="@+id/requestRideButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Location"
            android:fontFamily="@font/googlesans_medium"
            android:backgroundTint="@color/buttonColor"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
