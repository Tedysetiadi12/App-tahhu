<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Map View -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/lightGray"
        tools:ignore="MissingConstraints">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Top Bar for Pickup and Destination -->
    <LinearLayout
        android:id="@+id/back_beranda"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FF5722"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/left"
        app:tint="#FFFFFF" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/googlesans_bold"
        android:gravity="center"
        android:text="Ride Sharing"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/kebab"
        app:tint="#FFFFFF"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="110dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/back_beranda"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/riderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pak Zusfan"
            android:textColor="@color/black"
            android:fontFamily="@font/googlesans_bold"
            android:textSize="16sp"
            android:drawableStart="@drawable/location"
            android:drawablePadding="8dp"/>

        <TextView
            android:id="@+id/destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destination"
            android:fontFamily="@font/googlesans_bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawableStart="@drawable/placeholder"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Bottom Layout for Car Selection and Ride Request -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Car Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/economyCar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/taxi"
                android:contentDescription="Economy"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/luxuryCar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/scooter"
                android:contentDescription="Luxury"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/suvCar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/car2"
                android:contentDescription="SUV"/>
        </LinearLayout>

        <!-- Car Type Info -->
        <TextView
            android:id="@+id/carTypeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Economy - 3 min away"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>



        <!-- Request Ride Button -->
        <Button
            android:id="@+id/requestRideButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Ride"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
