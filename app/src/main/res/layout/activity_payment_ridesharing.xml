<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".rideSharing">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/back_beranda"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/accentColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/left"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/googlesans_medium"
            android:gravity="center"
            android:text="Payment"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/btn_titiktiga"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/kebab"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/back_beranda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Alamat Rumah"
                android:textSize="18dp"/>

            <!-- Pickup Location -->
            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:drawableStart="@drawable/location"
                android:fontFamily="@font/googlesans_regular"
                android:drawablePadding="8dp"
                android:textSize="@dimen/margin_standard"
                android:hint="Address"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginBottom="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Alamat Tujuan"
                android:textSize="18dp"/>

            <!-- Destination Address -->
            <TextView
                android:id="@+id/destinationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:drawableStart="@drawable/placeholder"
                android:fontFamily="@font/googlesans_regular"
                android:textSize="@dimen/margin_standard"
                android:drawablePadding="8dp"
                android:hint="Destination"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Vehicle Selection -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/black"
                android:layout_margin="5dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/vehicleImage"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/vehicleName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/googlesans_medium"
                            android:textColor="@color/black"
                            android:text="Vehicle Name"
                            android:textSize="16sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/detailVehicle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/googlesans_regular"
                                android:textColor="@color/black"
                                android:text="Detail"
                                android:layout_weight="1"
                                android:textSize="16sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Payment Method Options -->
            <!-- Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <!-- TextView untuk memilih metode pembayaran -->
                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/googlesans_medium"
                    android:text="Pilih Metode Pembayaran"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>

                <!-- Dropdown Icon -->
                <ImageView
                    android:id="@+id/icon_arrow2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrowdown"
                    android:contentDescription="Dropdown Arrow"/>
            </LinearLayout>

            <!-- Radio Group -->
            <RadioGroup
                android:id="@+id/radioGroupPembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview1">

                <!-- DANA Option -->
                <RadioButton
                    android:id="@+id/rb_dana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icondana1"
                    android:text="DANA"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- GoPay Option -->
                <RadioButton
                    android:id="@+id/rb_gopay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icongopay1"
                    android:textColor="@color/black"
                    android:text="GoPay"
                    android:drawablePadding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- OVO Option -->
                <RadioButton
                    android:id="@+id/rb_ovo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconovo1"
                    android:text="OVO"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- QRIS Option -->
                <RadioButton
                    android:id="@+id/rb_qris"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconqris1"
                    android:textColor="@color/black"
                    android:text="Scan Via QRIS"
                    android:visibility="gone"
                    android:drawablePadding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Transfer Bank BRI Option -->
                <RadioButton
                    android:id="@+id/rb_bri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconbri1"
                    android:text="Transfer Bank BRI"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:drawablePadding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Transfer Bank BCA Option -->
                <RadioButton
                    android:id="@+id/rb_bca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconbca1"
                    android:text="Transfer Bank BCA"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:drawablePadding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Transfer Bank Mandiri Option -->
                <RadioButton
                    android:id="@+id/rb_mandiri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/iconmandiri1"
                    android:text="Transfer Bank Mandiri"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/googlesans_medium"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Layanan" />

                <TextView
                    android:id="@+id/selectionInfoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/googlesans_regular"
                    android:textColor="@color/black"
                    android:text="Mobil/motor/kirimbarang"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/googlesans_medium"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Biaya Pokok" />

                <TextView
                    android:id="@+id/vehiclePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/googlesans_regular"
                    android:textColor="@color/black"
                    android:text="Rp "
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/googlesans_medium"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Biaya Tambahan" />

                <TextView
                    android:id="@+id/feeService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/googlesans_regular"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Rp " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/googlesans_medium"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Total Harga" />

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/googlesans_regular"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Rp " />
            </LinearLayout>

            <!-- Confirm Payment Button -->
            <Button
                android:id="@+id/confirmPaymentButton"
                android:layout_width="match_parent"
                android:fontFamily="@font/googlesans_medium"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonColor"
                android:text="Konfirmasi Pembayaran"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
