<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".rideSharing">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/back_beranda"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/accentColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/left"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/googlesans_medium"
            android:gravity="center"
            android:text="Payment"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/btn_titiktiga"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/kebab"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/back_beranda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Pickup Location -->
            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:drawableStart="@drawable/location"
                android:fontFamily="@font/googlesans_medium"
                android:drawablePadding="8dp"
                android:textSize="@dimen/margin_standard"
                android:hint="Address"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginBottom="8dp" />

            <!-- Destination Address -->
            <TextView
                android:id="@+id/destinationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:drawableStart="@drawable/placeholder"
                android:fontFamily="@font/googlesans_medium"
                android:textSize="@dimen/margin_standard"
                android:drawablePadding="8dp"
                android:hint="Destination"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Vehicle Selection -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/vehicleImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/vehicleName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/googlesans_medium"
                            android:textColor="@color/black"
                            android:text="Vehicle Name"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/vehiclePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/googlesans_medium"
                            android:textColor="@color/gray"
                            android:text="Rp 0.00"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Payment Method Options -->
            <RadioGroup
                android:id="@+id/paymentMethodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/selectedPaymentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected payment"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radioPayPal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/googlesans_medium"
                    android:textColor="@color/black"
                    android:text="PayPal"
                    android:layout_marginBottom="8dp"/>

                <RadioButton
                    android:id="@+id/radioPayoneer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/googlesans_medium"
                    android:textColor="@color/black"
                    android:text="Payoneer"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/radioCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/googlesans_medium"
                    android:textColor="@color/black"
                    android:text="Card"
                    android:layout_marginBottom="8dp"/>

            </RadioGroup>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Or input new card"
                android:fontFamily="@font/googlesans_medium"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioGroupPayment" />

            <!-- Label dan Input Nomor Kartu Kredit -->
            <TextView
                android:id="@+id/labelCardNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Card Number"
                android:textColor="@color/gray"
                android:fontFamily="@font/googlesans_medium"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <EditText
                android:id="@+id/editCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/googlesans_medium"
                android:background="@drawable/border_rating"
                android:hint="Enter card number"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelCardNumber" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/labelExpiryDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Exp. Date"
                    android:fontFamily="@font/googlesans_medium"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/labelCVV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/googlesans_medium"
                    android:text="Security code"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:gravity="end" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editCardCvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelExpiryDate">

                <!-- Expiry Date -->
                <EditText
                    android:id="@+id/editExpiryDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/googlesans_medium"
                    android:background="@drawable/border_rating"
                    android:hint="MM/YY"
                    android:padding="12dp" />

                <!-- Security Code (CVV) -->
                <EditText
                    android:id="@+id/editSecurityNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/googlesans_medium"
                    android:background="@drawable/border_rating"
                    android:hint="CVV"
                    android:inputType="textPassword"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- Label dan Input Cardholder Name -->
            <TextView
                android:id="@+id/labelCardHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Cardholder Name"
                android:fontFamily="@font/googlesans_medium"
                android:textColor="@color/gray"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editCardCvv" />

            <EditText
                android:id="@+id/editCardHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/googlesans_medium"
                android:background="@drawable/border_rating"
                android:hint="Enter cardholder name"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelCardHolder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/googlesans_medium"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Fee Services" />

                <TextView
                    android:id="@+id/feeService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/googlesans_medium"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Rp " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/googlesans_medium"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Totals" />

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/googlesans_medium"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Rp " />
            </LinearLayout>

            <!-- Confirm Payment Button -->
            <Button
                android:id="@+id/confirmPaymentButton"
                android:layout_width="match_parent"
                android:fontFamily="@font/googlesans_medium"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonColor"
                android:text="Confirm Payment"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
