<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_marginTop="10dp"
    android:elevation="6dp"
    android:background="@drawable/background_with_border">

    <!-- Nama dan Status -->
    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnBayar"
        android:layout_marginEnd="16dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="@font/googlesans_medium"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textSize="18sp"
            android:letterSpacing="0.1" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:fontFamily="@font/googlesans_medium"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:letterSpacing="0.05" />
    </LinearLayout>

    <!-- Tombol Bayar -->
    <Button
        android:id="@+id/btnBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bayar"
        android:backgroundTint="@color/accentColor"
        android:textColor="@android:color/white"
        android:fontFamily="@font/googlesans_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iconContainer"
        android:layout_marginBottom="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <!-- Container untuk icon Edit dan Hapus -->
    <LinearLayout
        android:id="@+id/iconContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBayar"
        android:layout_marginTop="12dp">

        <!-- Icon Edit -->
        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Edit"
            android:padding="12dp"
            android:src="@drawable/ic_edit"
            android:tint="@color/black"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/buttonIconBackground"
        />

        <!-- Icon Hapus -->
        <ImageView
            android:id="@+id/btnHapus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="Hapus"
            android:tint="@color/active_button_color"
            android:backgroundTint="@color/buttonIconBackground"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
