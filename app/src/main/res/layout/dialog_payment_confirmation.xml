<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:elevation="4dp"
    android:background="@drawable/rouded">

    <!-- Icon Sukses -->
    <ImageView
        android:id="@+id/imageConfirmation"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_success"
    />

    <!-- Pesan Sukses -->
    <TextView
        android:id="@+id/textConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pemesanan Berhasil Dilakukan!"
        android:textSize="18sp"
        android:fontFamily="@font/googlesans_medium"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textAlignment="center" />

    <!-- Tombol Download Invoice -->
    <Button
        android:id="@+id/btnDownloadInvoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/successGreen"
        android:fontFamily="@font/googlesans_medium"
        android:text="Download Invoice"
        android:textColor="@android:color/white" />

    <!-- Tombol Kembali ke Beranda -->
    <Button
        android:id="@+id/back_beranda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="@font/googlesans_medium"
        android:text="Kembali ke Beranda"
        android:textColor="@android:color/white" />

</LinearLayout>
