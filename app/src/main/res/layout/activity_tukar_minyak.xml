<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/back_beranda"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/accentColor"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/left"
            app:tint="#FFFFFF"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Penukaran Minyak"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/googlesans_bold"/>

        <ImageView
            android:id="@+id/btn_titiktiga"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/kebab"
            app:tint="#FFFFFF"/>
    </LinearLayout>

    <!-- Scrollable Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/back_beranda"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/tukar_minyak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukkan jumlah minyak jelantah (liter)"
                android:textSize="18sp"
                android:fontFamily="@font/googlesans_regular"
                android:textColor="#333333"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/edtJumlahMinyak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:hint="1"
                android:textColorHint="@color/gray"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:fontFamily="@font/googlesans_regular"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilihan penukaran"
                android:textSize="18sp"
                android:fontFamily="@font/googlesans_regular"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/margin_standard"
                android:layout_marginBottom="5dp"/>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbUang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tukar dengan Uang"
                    android:checked="true"
                    android:textColor="@color/black"
                    android:fontFamily="@font/googlesans_regular"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rbMinyakBaru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tukar dengan Minyak Baru"
                    android:textColor="@color/black"
                    android:fontFamily="@font/googlesans_regular"
                    android:textSize="14sp"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_standard"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/googlesans_regular"
                android:text="Pilih lokasi penukaran"
                android:textColor="#333333"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundMode="outline"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:boxStrokeColor="@color/accentColor"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:cursorColor="@color/black"
                android:hint="Pilih lokasi penukaran"
                app:endIconMode="dropdown_menu"
                android:textColorHint="@color/gray"
                android:backgroundTint="@color/accentColor">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/spinnerLihatLokasi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:background="@drawable/rounded_edittext"
                    android:textColor="@color/iconTint"
                    android:dropDownHeight="wrap_content"
                    android:dropDownVerticalOffset="-50dp"
                    android:dropDownHorizontalOffset="5dp"
                    android:entries="@array/lokasi_terdekat"
                    android:prompt="@string/lokasi_prompt" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi penjemputan"
                android:textSize="18sp"
                android:fontFamily="@font/googlesans_regular"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/margin_standard"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/edtAlamatPenjemputan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:hint="Masukkan alamat rumah Anda"
                android:textColorHint="@color/gray"
                android:inputType="text"
                android:textColor="@color/black"

                android:fontFamily="@font/googlesans_regular"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- Mockup Google Map -->
            <fragment
                android:id="@+id/map"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:name="com.google.android.gms.maps.SupportMapFragment"/>

            <!-- Button Tukar Minyak -->
            <Button
                android:id="@+id/btnTukar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonColor"
                android:text="Tukar Minyak"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
