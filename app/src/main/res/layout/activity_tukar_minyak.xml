<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/back_beranda"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/accentColor">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/left"
            app:tint="#FFFFFF"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Penukaran Minyak"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/googlesans_bold"/>

        <ImageView
            android:id="@+id/btn_titiktiga"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/kebab"
            app:tint="#FFFFFF"/>
    </LinearLayout>

    <!-- Content Section -->
    <LinearLayout
        android:id="@+id/tukar_minyak"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/back_beranda"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan jumlah minyak jelantah (liter)"
            android:textSize="18sp"
            android:fontFamily="@font/googlesans_regular"
            android:textColor="#333333"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edtJumlahMinyak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:hint="1"
            android:textColorHint="@color/gray"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:fontFamily="@font/googlesans_regular"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih variant"
            android:textSize="18sp"
            android:fontFamily="@font/googlesans_regular"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/spinnerKategoriTukar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edittext"
            android:text="Pilih Kategori Penukaran"
            android:padding="10dp"
            android:textColor="@color/black"
            android:entries="@array/ready_stock"
            android:prompt="@string/kategori_prompt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih lokasi terdekat"
            android:textSize="18sp"
            android:fontFamily="@font/googlesans_regular"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/spinnerLihatLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_edittext"
            android:text="Lihat Lokasi Penukaran Terdekat"
            android:entries="@array/lokasi_terdekat"
            android:prompt="@string/lokasi_prompt"/>

        <!-- Mockup Google Map -->
        <fragment
            android:id="@+id/map"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            app:layout_constraintTop_toBottomOf="@id/spinnerKategoriTukar"
            app:layout_constraintBottom_toTopOf="@id/btnTukar"/>

        <!-- Button Tukar Minyak, placed after Lihat Lokasi -->
        <Button
            android:id="@+id/btnTukar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/buttonColor"
            android:text="Tukar Minyak"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
