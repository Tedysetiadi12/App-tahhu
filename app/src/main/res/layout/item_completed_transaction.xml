<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/white"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <!-- Container untuk elemen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white"
        android:orientation="vertical">

        <!-- Transaction ID di atas -->
        <TextView
            android:id="@+id/transactionIdView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction ID: #12345"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingBottom="4dp"
            android:textSize="16sp" />

        <!-- Product Name di tengah -->
        <TextView
            android:id="@+id/productNameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Product Name: Awesome Product"
            android:paddingBottom="4dp"
            android:textSize="14sp" />

        <!-- Payment Method di bawahnya -->
        <TextView
            android:id="@+id/paymentMethodView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Payment Method: Credit Card"
            android:paddingBottom="4dp"
            android:textSize="14sp" />

        <!-- Total Price di bagian bawah -->
        <TextView
            android:id="@+id/totalPriceView"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Total Price: $100.00"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
