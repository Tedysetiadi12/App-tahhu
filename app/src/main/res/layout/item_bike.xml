<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center"
    android:layout_marginBottom="8dp"
    android:background="@drawable/background_with_border">

    <ImageView
        android:id="@+id/imageBike"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="Bike Image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/titleBike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bike Name"
            android:fontFamily="@font/googlesans_medium"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceBike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 50000"
            android:textSize="14sp"
            android:fontFamily="@font/googlesans_medium"
            android:textColor="@color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRideNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride Now"
        android:fontFamily="@font/googlesans_medium"
        android:backgroundTint="@color/accentColor"
        android:textColor="#FFFFFF" />
</LinearLayout>