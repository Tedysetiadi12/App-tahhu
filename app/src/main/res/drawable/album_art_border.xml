<!-- res/drawable/album_art_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Layer with border color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Warna border -->
            <corners android:radius="16dp" /> <!-- Radius untuk border rounded -->
        </shape>
    </item>

    <!-- Foreground Layer for the image -->
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Warna latar belakang dalam border -->
            <corners android:radius="14dp" /> <!-- Radius lebih kecil untuk menyesuaikan border -->
        </shape>
    </item>
</layer-list>
