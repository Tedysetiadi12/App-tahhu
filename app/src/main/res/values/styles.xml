<resources>

    <style name="Widget.Theme.tahhu.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.tahhu.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/accentColor</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="WeekDayStyle">
        <item name="android:textColor">#FF4081</item> <!-- Customize this color -->
        <item name="android:textSize">14sp</item> <!-- Customize text size -->
    </style>

    <!-- Style for Date Text Appearance -->
    <style name="DateStyle">
        <item name="android:textColor">#000000</item> <!-- Customize this color -->
        <item name="android:textSize">16sp</item> <!-- Customize text size -->
    </style>

</resources>