<resources>

    <style name="Widget.Theme.tahhu.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.tahhu.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/accentColor</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="WeekDayStyle">
        <item name="android:textColor">#FF4081</item> <!-- Customize this color -->
        <item name="android:textSize">14sp</item> <!-- Customize text size -->
    </style>

    <!-- Style for Date Text Appearance -->
    <style name="DateStyle">
        <item name="android:textColor">#000000</item> <!-- Customize this color -->
        <item name="android:textSize">16sp</item> <!-- Customize text size -->
    </style>

    <style name="CalendarDateTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CalendarWeekDayTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CalendarHeaderTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#FF6200EE</item> <!-- Ganti dengan warna yang diinginkan -->
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_background</item>
        <item name="android:elevation">4dp</item> <!-- Bayangan -->
    </style>

    <style name="CustomCalendarView" parent="Theme.MaterialComponents.Light">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

</resources>